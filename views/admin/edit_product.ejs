<%- include('../_layouts/admin-header') -%>
<h2 class="page-title">Edit Product <%= name %></h2>
<a href="/admin/products" class="btn btn-primary">Back to all products</a>
<br><br>

<form method="post" action="/admin/products/edit-product/<%= id %>" enctype="multipart/form-data">
    
      <div class="container">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name">
    </div>
    
    <div class="form-group">
        <label for="">Previous Category</label>
        <input class="form-control" cols="30" rows="10" placeholder="Category" value="<%= category %>" disabled>
        <br>
        <label for="">Update Category</label>
        <select name="category" id="cars" style="padding: 10px 9px;font-size: 16px;width: 100%;" >
            <option value=""></option>
            <option value="Microgreens">Microgreens</option>
            <option value="Edible Flowers">Edible Flowers</option>
            <option value="Fresh Herbs">Fresh Herbs</option>
            <option value="Rockets">Rockets</option>
            <option value="Basils">Basils</option>
            <option value="Baby Vegetables">Baby Vegetables</option>
          </select>
    </div>

      <div class="form-group">
        <label for="">Texture</label>
        <input name="texture" class="form-control" cols="30" rows="10" placeholder="Texture" value="<%= texture %>" ></input>
    </div>

      <div class="form-group">
        <label for="">Flavour</label>
        <input name="flavour" class="form-control" cols="30" rows="10" placeholder="Flavour" value="<%= flavour %>" ></input>
    </div>

      <div class="form-group">
        <label for="">Suggested use</label>
        <input name="suggesteduse" class="form-control" cols="30" rows="10" placeholder="Suggested use" value="<%= suggesteduse %>" ></input>
    </div>
    
 
    
    
    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
    </div>
    
    <div class="form-group">

        <!-- not working yet -->

        <label for="">Current Image</label>
        <p>
            <% if (image == "") { %>
            <img id="noimage" src="/images/noimage.png" alt="" name = "image">
            <% } else {%>
            <img id="noimage" name="image" src="/product_images/<%= id %>_<%= image %>" alt="" width="150" height="150">
            <% } %>
        </p>
    </div>
    
    <div class="form-group">
        <label for="">Upload Image</label>
        <input type="file" class="form-control" name="uimage" id="img"  accept=".jpg,.png,.jpeg">
        <img src="#" id="imgPreview" alt="">
    </div>
    <input type="radio" id="male" name="available" value="true">
    <label for="available">Available</label><br>
    <input type="radio" id="female" name="available" value="false">
    <label for="notavailable">Not available</label><br>
    
    <input type="hidden" name="pimage" value="<%= image %>">
    <button class="btn btn-default">Submit</button>
    </div>
</form>





<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/basic.css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone.js"></script>
<script>
    
    // Preview image
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
    // Dropzone
    Dropzone.options.dropzoneForm = {
        acceptedFiles: "image/*",
        init: function() {
            this.on("queuecomplete", function(file) {
               setTimeout(function() {
                location.reload()
                }, 1000); 
            });
        }
    }
    
</script>

<%- include('../_layouts/admin-footer') -%>