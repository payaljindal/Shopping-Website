<%- include('../_layouts/admin-header') -%>


<h2 class="page-title">Add a product</h2>
<a href="/admin/products" class="btn btn-primary">Back to all products</a>
<br><br>
<div class="container">
<form method="post" action="/admin/products/add-product" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name">
    </div>
    
    <div class="form-group">
        <label for="">Category</label>
        <!-- <input name="category" class="form-control" cols="30" rows="10" placeholder="Category"><%= category %></input> -->
        <select name="category" id="cars" style="padding: 10px 9px;font-size: 16px;width: 100%;" >
            <option value=""></option>
            <option value="Microgreens">Microgreens</option>
            <option value="Edible Flowers">Edible Flowers</option>
            <option value="Fresh Herbs">Fresh Herbs</option>
            <option value="Rockets">Rockets</option>
            <option value="Basils">Basils</option>
            <option value="Baby Vegetables">Baby Vegetables</option>
        </select>
    </div>

      <div class="form-group">
        <label for="">Texture</label>
        <input name="texture" class="form-control" cols="30" rows="10" placeholder="Texture"><%= texture %></input>
    </div>

      <div class="form-group">
        <label for="">Flavour</label>
        <input name="flavour" class="form-control" cols="30" rows="10" placeholder="Flavour"><%= flavour %></input>
    </div>

      <div class="form-group">
        <label for="">Suggested use</label>
        <input name="suggesteduse" class="form-control" cols="30" rows="10" placeholder="Suggested use"><%= suggesteduse %></input>
    </div>
    
  
    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
    </div>
    
    <div class="form-group">
        <label for="">Image</label>
        <input type="file" class="form-control" name="image" id="img" accept=".jpg,.png,.jpeg">
        <img src="#" id="imgPreview" alt="">
    </div>

    <input type="radio" id="male" name="available" value="true">
    <label for="available">Available</label><br>
    <input type="radio" id="female" name="available" value="false">
    <label for="notavailable">Not available</label><br>
    
    
    <button class="btn btn-default">Submit</button>
</form>
</div>
<script>
    
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
</script>

<%- include('../_layouts/admin-footer') -%>