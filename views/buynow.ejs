
    <%- include('_layouts/header') -%>
    <br><br><br>
    <div class="container">

        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                <h1 style="text-align: center;font-size: xx-large;">Checkout</h1>
                <br>
                <form action="/cart/buy" method="post" id="checkout-form">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="name" style="font-size: large;">Name</label>
                                <input style="padding: 2px 2px;font-size: medium;" type="text" id="name" class="form-control" required name="name" value="<%= name %>">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="address" style="font-size: large;">Email</label>
                                <input type="text" style="padding: 2px 2px;font-size: medium;" id="contact" class="form-control" required name="email">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="address" style="font-size: large;">Address</label>
                                <input type="text" style="padding: 2px 2px;font-size: medium;" id="address" class="form-control" required name="address">
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="address" style="font-size: large;">Contact No.</label>
                                <input type="number" style="padding: 2px 2px;font-size: medium;" id="contact" class="form-control" required name="contact">
                            </div>
                        </div>
                        
                        <hr>
              
                    </div>
                    <button type="submit" class="btn btn-success">Buy now</button>
                </form>
            </div>
        </div>


        </div>
        
        
        <%- include('_layouts/footer') -%>


