<%- include ('_layouts/header') -%>

<div class="container">
<center>  <h2>Log in</h2></center> <br>
<form method="post" action="/users/login" style="text-align:center">
    <div class="row">
        <div class="form-group col-md-4">
        </div>
    <div class="form-group col-md-4">
        <input type="text" name="username" class="form-control" placeholder="Username"  style="padding: 20px 9px;font-size: 16px">
    </div>
</div>

<div class="row">
    <div class="form-group col-md-4">
    </div>
    <div class="form-group col-md-4">
        <input type="password" name="password" class="form-control"  placeholder="Password" style="padding: 20px 9px;font-size: 16px">
    </div>
</div>
    <button type="submit" class="btn btn-default btn-info" style="background-color: #4CAF50;font-size: 16px;text-align: center;">Log in</button>
    <br> <br>
    <span style="font-size: medium;">Don't have an account? </span>
    <a href="/users/register"  class="btn btn-default btn-info" style="background-color: #4CAF50;font-size: 16px;text-align: center;">Create account</a>
</form>
</div>

<%- include ('_layouts/footer') -%>