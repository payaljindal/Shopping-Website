<%- include ('_layouts/header') -%>
<center>  <h1>Create an account</h1></center>
<div class="container ">
<form method="post" action="/users/register">

    <div class="row">
        <div class="form-group col-md-3">
        <!-- <label>Name</label> -->
        <input type="text" name="name" class="form-control" placeholder="Name" style="padding: 20px 9px;">
    </div>
    </div>

    <div class="row">
        <div class="form-group col-md-3">
        <!-- <label>Email</label> -->
        <input type="text" name="email" class="form-control" placeholder="Email" style="padding: 20px 9px;">
    </div></div>

    
    <div class="row">
        <div class="form-group col-md-3">
        <!-- <label>Username</label> -->
        <input type="text" name="username" class="form-control" placeholder="Username" style="padding: 20px 9px;">
    </div></div>

    <div class="row">
    <div class="form-group col-md-3">
        <!-- <label>Password</label> -->
        <input type="password" name="password" class="form-control"  placeholder="Password" style="padding: 20px 9px;">
    </div></div>
    
    <div class="row">
        <div class="form-group col-md-3">
        <!-- <label>Confirm Password</label> -->
        <input type="password" name="password2" class="form-control"  placeholder="Confirm Password" style="padding: 20px 9px;">
    </div></div>

    <button type="submit" class="btn btn-default btn-info">Register</button>
</form>
</div>
<div class="col-md-5"></div>
