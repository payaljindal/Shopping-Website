<%- include('_layouts/header') -%>


<h2 class="page-title" style="text-align: center;font-family: serif;font-size: xx-large;">Buy Now</h2>

<br><br>
<div class="container">
    <div class="offset-md-4 col-md-4">
<form method="post" action="/cart/buy" >
    
    <div class="form-group">
        <label for=""  style="font-size: medium;">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name" style="padding: 20px 9px;font-size: 16px">
    </div>
    


      <div class="form-group">
        <label for=""  style="font-size: medium;">Address</label>
        <input name="address" class="form-control" cols="30" rows="10" placeholder="Address" style="padding: 20px 9px;font-size: 16px"><%= address %></input>
    </div>

    <div class="form-group">
        <label for=""  style="font-size: medium;">Contact No.</label>
        <input name="contact" class="form-control" cols="30" rows="10" placeholder="Contact" style="padding: 20px 9px;font-size: 16px"><%= contact %></input>
    </div>

    
    <button type="submit" class="btn btn-default btn-info" style="font-size: 16px;text-align: center;">Buy</button>
    <!-- <button class="btn btn-default">Submit</button> -->
</form>
</div>
</div>

<%- include('_layouts/footer') -%>