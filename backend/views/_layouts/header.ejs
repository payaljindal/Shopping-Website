          <%- messages('messages', locals) -%>
          
          <% if (typeof(errors) !== "undefined") { %>
            <% errors.forEach(function(error) { %>
              entered
            <div class="alert alert-danger">
                yes!<%= error.msg %>
            </div>
            <% }); %>
        <% }%>
      </div><!-- /.container -->


